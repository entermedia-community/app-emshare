{
    "name": "searchdam",
    "description": "Can search the attached Digital Asset Management system based on keywords",
    "parameters": {
        "type": "object",
        "properties": {
            "keywords": {
                "type": "string"
            },
            "entity": {
                    "type": "string",
                    "enum": [
                        "asset"
                        #if($chatprofile)
                        ,
                        #foreach($entity in $chatprofile.getEntities())
                        	#if($foreach.count != 1 ),#end
                            "$entity.id"
                        #end
                        #end
                       
                    ]
          }
            
            
        },
        "required": [
            "keywords",
             "entity"
        ]
    }
}
