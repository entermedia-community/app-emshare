Conversation:
{	
    "conversation": {
		"type": "object",
		"description": "Details about the request. Only required if request_type is 'conversation'.",
		"friendly_response": {
			"type": "string",
			"description": "A brief response to the user's request in natural language. Only required if request_type is 'conversation'."
		 },
		"sentence_parts": {
			"type": "array",
            "description": "Ordered list of the parts of the sentence",
			"items": {
				"type": "object",
				"properties": {
					"main_action": {
					    "type": "string",
					    "description": "verb"
					},
					"subject": {
					    "type": "string",
					    "description": "who or what performs it"
					},
				    "object": {
				        "type": "string",
				        "description": "what it acts on"
				    },
					"filters": {
                        "type": "object",
                        "description": "Column-value pairs used as filters or adjectives."
                    }
                }
			}
		}
	}
}


Search:
{
	"search": {
        "type": "object",
        "description": "Separate any table in the request and include the keywords and parameters that apply to that table.",
        "tables": {
            "type": "array",
            "description": "A list tables to be searched with their parameters.",
            "items" : {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Name of the table if mentioned in the request, use 'Not specified' otherwise.",
                        "enum": [
                        #foreach($module in $schema.modules)
                            #if($foreach.count > 1),#end
                            #jesc($module.getName())
                        #end
                            ,
                            "Not specified"
                        ]
                    },
                    "keywords": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "description": "The main keyword to search for in the table."
                    },
                    "parameters": {
                        "type": "object",
                        "description": "All column-value pairs to be searched"
                    } 
                }          
            }
        }
	}
}


Create Image:
{
    "create_image": {
        "type": "object",
        "description": "Details about the creation request. Only required if request_type is 'create_image'.",
        "properties": {
            "image_name": {
                "type": "string",
                "description": "A short filename without extension of the image to be created."
            },
            "prompt": {
                "type": "string",
                "description": "Prompt for the image creation. Use the exact user prompt, don't add any additional instructions about image size, format, etc."
            }
        }
    }
}


Create Entity:
{
    "create_entity": {
        "type": "object",
        "description": "Details about the entity creation request. Only required if request_type is 'create_entity'.",
        "properties": {
            "entity_name": {
                "type": "string",
                "description": "Name of the entity to be created."
            },
            "module_id": {
                "type": "string",
                "description": "ID of the module where the entity should be saved in.",
                "enum": [
                #foreach($module in $schema.modules)
                    #if($foreach.count > 1),#end 
                    #jesc("$module.getId()|$module.getName()")
                #end
                ]
            }
        }
    }
}
