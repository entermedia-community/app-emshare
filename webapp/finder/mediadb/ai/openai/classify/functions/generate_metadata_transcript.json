{
  "name": "generate_metadata_transcript",
  "description": "Analyze the following transcript from an audio/video file to generate appropriate values for its missing metadata fields.
	#ifnotnull( $asset.name )File Name: #jrender($asset.name) #end
	Transcript: #jrender($textcontent)",
  "parameters": {
    "type": "object",
    "properties": {
      "metadata": {
        "type": "object",
        "properties": {
		  #foreach($field in $aifields)
			  #if($foreach.count>1)
			  ,
			  #end
				#if($field.isList())
					"$field.id": {
						"type": "string",
						"description": "#jrender($field.aicreationcommand)",
						"enum": [
							#foreach( $option in $mediaarchive.getList($field.getListId()) )
								#if($foreach.count>1)
								,
								#end
								#jesc("$option.id|#text($option)")
							#end
						]
					}
				#else
					"$field.id": {
						"type": "string",
						"description": "#jrender($field.aicreationcommand)"
					}
				#end
		  #end
        },
        "required": [
			#foreach($field in $aifields)
				#if($foreach.count>1)
				,
				#end
			  	"$field.id"
			#end
        ]
      }
    },
    "required": ["metadata"]
  }
}
