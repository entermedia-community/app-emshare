{
    "model": "gpt-4o-mini",
    "input": [
        {
            "role": "system",
            "content": #jesc("You are an AI that maps natural language to a query plan. Use the following hierarchy: 
							#foreach($module in $modules)
								#if($foreach.count>1) -> #end		$module.getName()	
							#end ")
        },
        {
            "role": "user",
            "content": #jesc("Make a query plan for: '${message.message}'")
        }
    ],
    "text": {
        "format": {
            "type": "json_schema",
            "name": "parse_sentence",
            "strict": false,
            "schema": {
                "type": "object",
                "properties": {
					"request_type": {
						"type": "string",
						"enum": [
							"search",
							"creation",
							"how-to",
							"task",
							"conversation",
							"support"
						],
						"description": "The type of natural language request being made "
					},
                    "steps": {
                        "type": "array",
                        "description": "Ordered list of search or join operations.",
                        "items": {
                            "type": "object",
                            "properties": {
                                "table": {
                                    "type": "string",
                                    "description": "Name of the database table."
                                },
                                "operation": {
                                    "type": "string",
                                    "enum": [
                                        "search",
                                        "filter",
                                        "join",
                                        "aggregate"
                                    ],
                                    "description": "Type of database operation."
                                },
                                "filters": {
                                    "type": "object",
                                    "description": "Column-value pairs used as filters.",
                                    "additionalProperties": {
                                        "type": "string"
                                    }
                                },
                                "join": {
                                    "type": [
                                        "string",
                                        "null"
                                    ],
                                    "description": "Name of the table joined to this step, if any."
                                },
                                "sort": {
                                    "type": [
                                        "string",
                                        "null"
                                    ],
                                    "description": "Sorting field and direction, e.g., 'created_at DESC'."
                                }
                            },
                            "required": [
                                "table",
                                "operation",
                                "filters"
                            ],
                            "additionalProperties": false
                        }
                    },
                   
                    "additionalProperties": false
                }
            }
        }
    }
}