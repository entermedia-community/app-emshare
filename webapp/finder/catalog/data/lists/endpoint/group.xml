<?xml version="1.0" encoding="UTF-8"?>

<endpoints>   
  <data id="creategroup" name="Create New Group" url="/${applicationid}/services/settings/groups/create" docsection="modulegroups" caption="Create new group" httpmethod="POST"> 
    <samplerequest><![CDATA[{ "id":"testgroup", "name":"Testers"}]]></samplerequest> 
  </data>  
  <data id="groupsearch" name="Search for Groups" httpmethod="POST" url="/${applicationid}/services/settings/groups/search" docsection="modulegroups"> 
    <samplerequest><![CDATA[
    	{
    	    "page": "1", 
    	    "hitsperpage":"20",
            "query": 
            {
            	"terms":[{
	            	"field": "id",
					"operator": "matches",
					"value": "*"
				}]
	         }
	        } 
	      ]]></samplerequest> 
  </data>  
  <data id="deletegroup" name="Delete Group" url="/${applicationid}/services/settings/groups/data/testgroup" docsection="modulegroups" caption="Delete group by name" httpmethod="DELETE"/>  
  <data id="updategroup" name="Update Group" url="/${applicationid}/services/settings/groups/data/testgroup" docsection="modulegroups" caption="Change group settings" httpmethod="PUT"> 
    <samplerequest><![CDATA[{"name":"Test Group"}]]></samplerequest> 
  </data>  
  <data id="getgroup" name="Load Group" url="/${applicationid}/services/settings/groups/data/testgroup" docsection="modulegroups" caption="List group data" httpmethod="GET"/>
</endpoints>
