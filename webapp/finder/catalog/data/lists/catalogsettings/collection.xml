<properties>
	
	<!--  An asset can be viewed by the owner and the administrators-->
	<property id="catalogassetviewispublic" value="false">Default Assets To Public (true/false)</property>
	<property id="catalogassetviewusers" value="${asset.owner}">Admin Catalog Asset View Users</property>
	<property id="catalogassetviewgroups" value="administrators">Admin Catalog Asset View Groups</property>

	<property id="catalogasseteditusers" value="${asset.owner}">Catalog Asset Edit Users</property>
	<property id="catalogasseteditgroups" value="administrators users">Catalog Asset Edit Groups</property>


	<property id="catalogassetforcewatermarkusers" value="">Admin Catalog Asset View Users</property>
	<property id="catalogassetforcewatermarkgroups" value="">Admin Catalog Asset View Groups</property>
	<property id="categoryupload" value="${categorypath}/${filename}">Category Upload Path</property>
	<property id="collectionassetupload" value="${categorypath}/${filename}">Collection Media Upload Path</property>
	<property id="collectionuploadwithyear" value="true">Add Year To Collection Uploads Path</property>
	
	<property id="catalogassetupload" value="${formattedmonth}/${splitguid}/">API Upload Path</property>
	<property id="movecollectionpath" value="${newlibrary.folder||newlibrary.name}/${year}/${splitname}">Collection Export Path</property>
	
	<property id="publiccollections" value="false">Default Collections To Public (true/false)</property>
	<property id="publiclibraries" value="false">Default Libraries To Public (true/false)</property>

	<property id="notify-group-on-all-collection-modify" value="collectionnotification">Collection Notification Group ID</property>
	<property id="auto-create-collections" value="false">Auto Create Collections</property>
	
	<property id="show_add_media_collection" value="true">Require a collection picker on the simple Add Media page</property>

	<property id="collection_root" value="Albums">Root Collection</property>

